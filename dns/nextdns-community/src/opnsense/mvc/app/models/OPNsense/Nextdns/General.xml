<model>
    <mount>//OPNsense/nextdns/general</mount>
    <description>Nextdns CLI configuration</description>
    <version>0.0.1</version>
    <items>
        <enabled type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </enabled>

        <email type="EmailField">
            <Required>N</Required>
        </email>

        <password type="UpdateOnlyTextField">
            <Required>N</Required>
        </password>

        <config type="TextField">
            <default></default>
            <Required>Y</Required>
            <Multiple>Y</Multiple>
        </config>

        <listen type="TextField">
            <default>:53</default>
            <Multiple>Y</Multiple>
            <Required>N</Required>
        </listen>

        <forwarder type="TextField">
            <default></default>
            <Multiple>Y</Multiple>
            <Required>N</Required>            
        </forwarder>  

        <setuprouter type="BooleanField">
            <default>1</default>
            <Required>Y</Required>            
        </setuprouter>

        <cachesize type="IntegerField">
            <default>10</default>
            <Required>Y</Required>            
        </cachesize>

        <cachemaxage type="IntegerField">
            <default>0</default>
            <Required>N</Required>            
        </cachemaxage>

        <maxttl type="IntegerField">
            <default>0</default>
            <Required>N</Required>            
        </maxttl>        

        <timeout type="IntegerField">
            <default>5</default>
            <Required>Y</Required>            
        </timeout>

        <logqueries type="BooleanField">
            <default>1</default>
            <Required>N</Required>            
        </logqueries>

        <usehosts type="BooleanField">
            <default>0</default>
            <Required>N</Required>            
        </usehosts>

        <autoactivate type="BooleanField">
            <default>1</default>
            <Required>Y</Required>            
        </autoactivate>        

        <detectcaptiveportals type="BooleanField">
            <default>0</default>
            <Required>N</Required>            
        </detectcaptiveportals>

        <boguspriv type="BooleanField">
            <default>1</default>
            <Required>Y</Required>            
        </boguspriv>

        <reportclientinfo type="BooleanField">
            <default>1</default>
            <Required>Y</Required>            
        </reportclientinfo>

        <discoverydns type="TextField">
            <default></default>
            <Required>N</Required>            
        </discoverydns>

    </items>
</model>
